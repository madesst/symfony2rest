<database namespace="Madesst\RestBundle\Propel" defaultIdMethod="native" name="default">
  <table name="product" phpName="Product">
    <column name="id" phpName="Id" type="INTEGER" primaryKey="true" autoIncrement="true" required="true"/>
    <column name="created_at" phpName="CreatedAt" type="DATE" required="true" defaultExpr="now()" />
    <column name="updated" phpName="Updated" type="TIMESTAMP" required="false" />
    <column name="name" phpName="Name" type="VARCHAR" size="255" required="true"/>
    <column name="description" phpName="Description" type="LONGVARCHAR" required="true"/>
    <column name="price" phpName="Price" type="DOUBLE" required="true"/>
  </table>
</database>
